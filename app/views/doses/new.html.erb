<div class="container w-50 mt-5">
  <%= link_to cocktails_path do %>
      <i class="fas fa-undo-alt"></i> Back to cocktails
  <% end %>
</div>

<div class="container w-50 mt-5">
  <h1>Create a new dose</h1>
  <%= simple_form_for([@cocktail, @dose]) do |f| %>
    <%= f.input :description %>
    <%= f.association :ingredient %>
    <%= f.submit %>
  <% end %>   
</div>